<%- include(`../partials/head`) %>
<%- include(`../partials/header`) %>

<h1><%= foundBugs.project %></h1>
<h2><%= foundBugs.title %></h2>
<a class="button" href="/index/filtered">Bugs assigned to me</a>
<a class="button" style="margin: 1rem;" href="/main">Main Page</a>
<a class="button" style="margin: 1rem;" href="/projects/<%= foundProject._id%>">Back to Project</a>
<div class="">
    <div class="">
        <p><%= foundBugs.comments %></p>
        <p>Status: <%= foundBugs.status %></p>
        <p>Priority: <%= foundBugs.priority %></p>
        <p>Assigned to: 
            <% if(foundBugs.assignedTo == `unassigned`) { %> 
            <%= foundBugs.assignedTo %> 
            <% } else { %>
            <% for(let i = 0; i < foundUser.length; i++) { %>
                <% if(foundUser[i]._id == foundBugs.assignedTo) { %>
                <%= foundUser[i].firstName %> <%= foundUser[i].lastName %>
                <% }}} %>
        </p>
        <p> <% if(foundBugs.fixed) { %>
            Bug has been fixed!
            <% } else { %>
            Bug is not fixed yet 
            <% } %> 
        </p>

        <% if (currentUser === foundBugs.assignedTo || role === "Admin" || role === "Team Leader") { %>
        <a class="btn" href="/index/<%= foundBugs._id %>/edit">Edit</a>
        <form class="delete-form" action="/index/<%= foundBugs._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn">
        </form>
        <% } else { %>
        <p style="color: red">You can't edit or delete this entry</p>
        <%  } %>
    </div>
</div>



<%- include(`../partials/footer`) %>