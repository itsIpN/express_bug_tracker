<%- include(`../partials/head`) %>
<%- include(`../partials/header`) %>

<h1>Change User Role</h1>
    <form action="/user/<%= user._id %>?_method=PATCH" method="POST">
        <label for="firstName">
            First Name
            <input type="text" name="firstName" id="firstName" value="<%= user.firstName %>" autofocus required readonly>
        </label>
        <label for="lastName">
            Last Name
            <input type="text" name="lastName" id="lastName" value="<%= user.lastName %>" required readonly>
        </label>
        <label for="email">
            Email
            <input type="email" name="email" id="email"  value="<%= user.email %>" required readonly>
        </label>
        <label for="role"></label>
        <div class="input-group">
            <select class="custom-select" id="role" name="role">
              <option value="<%= user.role %>" selected><%=user.role %></option>
                <% if(user.role == `User`) { %>
                    <option value="Team Leader">Team Leader</option>
                    <option value="Admin">Admin</option>
                <% } else if(user.role == `Team Leader`) { %>
                    <option value="User">User</option>
                    <option value="Admin">Admin</option>
                <% } else if(user.role == `Admin`) { %>
                    <option value="User">User</option>
                    <option value="Team Leader">Team Leader</option>
                <% } %>
            </select>
          </div>
        <input class="button" type="submit" value="Update">
    </form>



<%- include(`../partials/footer`) %>